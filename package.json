{
  "name": "mdx-exporter-lite",
  "displayName": "MD & PDF Toolkit",
  "description": "Preview Markdown, export to PDF/DOCX, and view PDF files - all in one toolkit",
  "version": "0.3.17",
  "publisher": "bachtv",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bachtv/mdx-exporter-lite"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "keywords": [
    "markdown",
    "pdf",
    "docx",
    "export",
    "preview",
    "converter",
    "pdf-viewer"
  ],
  "icon": "resources/icon.png",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:markdown",
    "onCustomEditor:mdxExporter.pdfViewer"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mdxExporter.openPreviewToSide",
        "title": "MDX: Open Preview to Side",
        "icon": "$(open-preview)"
      },
      {
        "command": "mdxExporter.exportPdf",
        "title": "MDX: Export to PDF",
        "icon": "$(file-pdf)"
      },
      {
        "command": "mdxExporter.quickExportPdf",
        "title": "MDX: Quick Export to PDF",
        "icon": "$(zap)"
      },
      {
        "command": "mdxExporter.exportDocx",
        "title": "MDX: Export to DOCX",
        "icon": "$(file-text)"
      },
      {
        "command": "mdxExporter.quickExportDocx",
        "title": "MDX: Quick Export to DOCX",
        "icon": "$(zap)"
      },
      {
        "command": "mdxExporter.docxToPdf",
        "title": "MDX: Convert DOCX to PDF",
        "icon": "$(file-pdf)"
      },
      {
        "command": "mdxExporter.docxToMarkdown",
        "title": "MDX: Convert DOCX to Markdown",
        "icon": "$(markdown)"
      },
      {
        "command": "mdxExporter.exportPng",
        "title": "MDX: Export to PNG",
        "icon": "$(file-media)"
      },
      {
        "command": "mdxExporter.exportJpeg",
        "title": "MDX: Export to JPEG",
        "icon": "$(file-media)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "mdxExporter.openPreviewToSide",
          "when": "editorLangId == markdown"
        },
        {
          "command": "mdxExporter.exportPdf",
          "when": "editorLangId == markdown"
        },
        {
          "command": "mdxExporter.quickExportPdf",
          "when": "editorLangId == markdown"
        },
        {
          "command": "mdxExporter.exportDocx",
          "when": "editorLangId == markdown"
        },
        {
          "command": "mdxExporter.quickExportDocx",
          "when": "editorLangId == markdown"
        },
        {
          "command": "mdxExporter.docxToPdf",
          "when": "resourceExtname == .docx"
        },
        {
          "command": "mdxExporter.docxToMarkdown",
          "when": "resourceExtname == .docx"
        },
        {
          "command": "mdxExporter.exportPng",
          "when": "editorLangId == markdown"
        },
        {
          "command": "mdxExporter.exportJpeg",
          "when": "editorLangId == markdown"
        }
      ],
      "explorer/context": [
        {
          "command": "mdxExporter.exportPdf",
          "when": "resourceLangId == markdown",
          "group": "mdxExporter@1"
        },
        {
          "command": "mdxExporter.exportDocx",
          "when": "resourceLangId == markdown",
          "group": "mdxExporter@2"
        },
        {
          "command": "mdxExporter.docxToPdf",
          "when": "resourceExtname == .docx",
          "group": "mdxExporter@3"
        },
        {
          "command": "mdxExporter.docxToMarkdown",
          "when": "resourceExtname == .docx",
          "group": "mdxExporter@4"
        },
        {
          "command": "mdxExporter.exportPng",
          "when": "resourceLangId == markdown",
          "group": "mdxExporter@5"
        },
        {
          "command": "mdxExporter.exportJpeg",
          "when": "resourceLangId == markdown",
          "group": "mdxExporter@6"
        }
      ],
      "editor/title": [
        {
          "command": "mdxExporter.openPreviewToSide",
          "when": "editorLangId == markdown",
          "group": "navigation@1"
        },
        {
          "command": "mdxExporter.exportPdf",
          "when": "editorLangId == markdown",
          "group": "navigation@2"
        },
        {
          "command": "mdxExporter.exportDocx",
          "when": "editorLangId == markdown",
          "group": "navigation@3"
        }
      ],
      "editor/context": [
        {
          "command": "mdxExporter.openPreviewToSide",
          "when": "editorLangId == markdown",
          "group": "mdpdf@1"
        },
        {
          "command": "mdxExporter.exportPdf",
          "when": "editorLangId == markdown",
          "group": "mdpdf@2"
        },
        {
          "command": "mdxExporter.exportDocx",
          "when": "editorLangId == markdown",
          "group": "mdpdf@3"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "mdxExporter.pdfViewer",
        "displayName": "MDX PDF Viewer",
        "selector": [
          {
            "filenamePattern": "*.pdf"
          }
        ],
        "priority": "option"
      }
    ],
    "configuration": {
      "title": "MDX Exporter Lite",
      "properties": {
        "mdxExporter.outputDirectory": {
          "type": "string",
          "default": "",
          "description": "Default output directory for exported files. Leave empty to output alongside the source file."
        },
        "mdxExporter.openAfterExport": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open the exported file after successful export."
        },
        "mdxExporter.saveBeforeExport": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save the Markdown file before exporting (no prompt)."
        },
        "mdxExporter.formatBeforeExport": {
          "type": "boolean",
          "default": true,
          "description": "Automatically format the Markdown file (via the configured formatter) before exporting."
        },
        "mdxExporter.quickExportOverwrite": {
          "type": "boolean",
          "default": false,
          "description": "When using Quick Export, overwrite existing files without prompting."
        },
        "mdxExporter.pdfPageFormat": {
          "type": "string",
          "default": "A4",
          "enum": [
            "A4",
            "Letter",
            "Legal",
            "A3",
            "A5"
          ],
          "description": "Page format for PDF export."
        },
        "mdxExporter.pdfMargin": {
          "type": "string",
          "default": "20mm",
          "description": "Page margin for PDF export (e.g., '20mm', '1in')."
        },
        "mdxExporter.displayHeaderFooter": {
          "type": "boolean",
          "default": false,
          "description": "Display header and footer in PDF export."
        },
        "mdxExporter.headerTemplate": {
          "type": "string",
          "default": "",
          "description": "HTML template for PDF header. Use %%ISO-DATE%%, %%ISO-TIME%%, %%ISO-DATETIME%% for dates."
        },
        "mdxExporter.footerTemplate": {
          "type": "string",
          "default": "<div style=\"font-size: 9px; margin: 0 auto;\"><span class='pageNumber'></span> / <span class='totalPages'></span></div>",
          "description": "HTML template for PDF footer. Use <span class='pageNumber'></span> and <span class='totalPages'></span>."
        },
        "mdxExporter.styles": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "List of custom CSS file paths to apply to exports."
        },
        "mdxExporter.jpegQuality": {
          "type": "number",
          "default": 90,
          "minimum": 0,
          "maximum": 100,
          "description": "Quality of JPEG export (0-100)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run copy:pdfjs && npm run esbuild-base -- --minify",
    "copy:pdfjs": "node ./scripts/copy-pdfjs.mjs",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "compile": "npm run copy:pdfjs && npm run esbuild-base -- --sourcemap",
    "watch": "npm run copy:pdfjs && npm run esbuild-base -- --sourcemap --watch",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "docx": "^8.5.0",
    "katex": "^0.16.27",
    "mammoth": "^1.11.0",
    "markdown-it": "^14.0.0",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-texmath": "^1.0.0",
    "mermaid": "^10.9.1",
    "pdfjs-dist": "^5.4.449",
    "puppeteer-core": "^22.0.0"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.0.0",
    "@types/markdown-it-emoji": "^3.0.1",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  }
}
