{
  "name": "mdx-exporter-lite",
  "displayName": "MDX Exporter Lite",
  "description": "Preview and export Markdown files to PDF and DOCX - No external dependencies required",
  "version": "0.1.1",
  "publisher": "bachtv",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bachtv/mdx-exporter-lite"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "keywords": [
    "markdown",
    "pdf",
    "docx",
    "export",
    "preview",
    "converter"
  ],
  "icon": "resources/icon.png",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mdxExporter.openPreviewToSide",
        "title": "MDX: Open Preview to Side",
        "icon": "$(open-preview)"
      },
      {
        "command": "mdxExporter.exportPdf",
        "title": "MDX: Export to PDF",
        "icon": "$(file-pdf)"
      },
      {
        "command": "mdxExporter.exportDocx",
        "title": "MDX: Export to DOCX",
        "icon": "$(file-text)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "mdxExporter.openPreviewToSide",
          "when": "editorLangId == markdown"
        },
        {
          "command": "mdxExporter.exportPdf",
          "when": "editorLangId == markdown"
        },
        {
          "command": "mdxExporter.exportDocx",
          "when": "editorLangId == markdown"
        }
      ],
      "explorer/context": [
        {
          "command": "mdxExporter.exportPdf",
          "when": "resourceLangId == markdown",
          "group": "mdxExporter@1"
        },
        {
          "command": "mdxExporter.exportDocx",
          "when": "resourceLangId == markdown",
          "group": "mdxExporter@2"
        }
      ],
      "editor/title": [
        {
          "command": "mdxExporter.openPreviewToSide",
          "when": "editorLangId == markdown",
          "group": "navigation@1"
        },
        {
          "command": "mdxExporter.exportPdf",
          "when": "editorLangId == markdown",
          "group": "navigation@2"
        },
        {
          "command": "mdxExporter.exportDocx",
          "when": "editorLangId == markdown",
          "group": "navigation@3"
        }
      ]
    },
    "configuration": {
      "title": "MDX Exporter Lite",
      "properties": {
        "mdxExporter.outputDirectory": {
          "type": "string",
          "default": "",
          "description": "Default output directory for exported files. Leave empty to output alongside the source file."
        },
        "mdxExporter.openAfterExport": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open the exported file after successful export."
        },
        "mdxExporter.saveBeforeExport": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save the Markdown file before exporting (no prompt)."
        },
        "mdxExporter.formatBeforeExport": {
          "type": "boolean",
          "default": true,
          "description": "Automatically format the Markdown file (via the configured formatter) before exporting."
        },
        "mdxExporter.pdfPageFormat": {
          "type": "string",
          "default": "A4",
          "enum": [
            "A4",
            "Letter",
            "Legal",
            "A3",
            "A5"
          ],
          "description": "Page format for PDF export."
        },
        "mdxExporter.pdfMargin": {
          "type": "string",
          "default": "20mm",
          "description": "Page margin for PDF export (e.g., '20mm', '1in')."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "markdown-it": "^14.0.0",
    "docx": "^8.5.0",
    "puppeteer-core": "^22.0.0"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.0.0",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  }
}
